APP_NAME="CAS Private Care"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://casprivatecare.online

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cas_private_care
DB_USERNAME=root
DB_PASSWORD=

# ===============================================
# SESSION CONFIGURATION (Secure settings for production)
# ===============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===============================================
# EMAIL CONFIGURATION (Brevo SMTP)
# ===============================================
# For local development, use 'log' driver
# For production, use 'smtp' with Brevo credentials
MAIL_MAILER=log
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-brevo-username
MAIL_PASSWORD=your-brevo-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@casprivatecare.com"
MAIL_FROM_NAME="${APP_NAME}"

# Brevo API Key (for transactional emails)
BREVO_API_KEY=your-brevo-api-key-here

# Admin Contact Emails
ADMIN_EMAIL=admin@casprivatecare.com
SUPPORT_EMAIL=support@casprivatecare.com

# ===============================================
# STRIPE PAYMENT CONFIGURATION
# ===============================================
# ⚠️  IMPORTANT: Replace test keys with LIVE keys before production deployment!
# 
# Development (use these for testing):
#   STRIPE_KEY=pk_test_xxxxxxxxxxxx
#   STRIPE_SECRET=sk_test_xxxxxxxxxxxx
#
# Production (get from Stripe Dashboard > Developers > API Keys):
#   STRIPE_KEY=pk_live_xxxxxxxxxxxx
#   STRIPE_SECRET=sk_live_xxxxxxxxxxxx
#
# Webhook Secret (create at Stripe Dashboard > Developers > Webhooks):
#   Point webhook to: https://yourdomain.com/api/stripe/webhook
#   Select events: payment_intent.succeeded, payment_intent.failed, 
#                  account.updated, payout.created, payout.failed
#
STRIPE_KEY=pk_test_REPLACE_WITH_YOUR_KEY
STRIPE_SECRET=sk_test_REPLACE_WITH_YOUR_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_SECRET

# Stripe Connect for Contractor Payouts
# Get from: Stripe Dashboard > Connect > Settings > Integration
STRIPE_CONNECT_CLIENT_ID=ca_REPLACE_WITH_YOUR_CLIENT_ID

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Auto-approve bookings (true/false)
BOOKING_AUTO_APPROVE=false

# Maximum active bookings per client
MAX_ACTIVE_BOOKINGS_PER_CLIENT=1

# Commission Rates (in dollars per hour)
MARKETING_COMMISSION_RATE=1.00
TRAINING_COMMISSION_RATE=0.50
ADMIN_COMMISSION_RATE=0.00

# ===============================================
# PERFORMANCE SETTINGS
# ===============================================
# Enable response caching for public pages
RESPONSE_CACHE_ENABLED=true

# CDN Configuration (optional - improves global performance)
CDN_ENABLED=false
ASSET_CDN_URL=

# ===============================================
# EXTERNAL SERVICES (Optional)
# ===============================================
# Sentry Error Monitoring (recommended for production)
SENTRY_LARAVEL_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Social Login (OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

# AWS S3 (optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
