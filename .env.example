APP_NAME="CAS Private Care"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://casprivatecare.online

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cas_private_care
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===============================================
# EMAIL CONFIGURATION (Brevo SMTP)
# ===============================================
# For local development, use 'log' driver
# For production, use 'smtp' with Brevo credentials
MAIL_MAILER=log
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-brevo-username
MAIL_PASSWORD=your-brevo-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@casprivatecare.com"
MAIL_FROM_NAME="${APP_NAME}"

# Brevo API Key (for transactional emails)
BREVO_API_KEY=your-brevo-api-key-here

# Admin Contact Emails
ADMIN_EMAIL=admin@casprivatecare.com
SUPPORT_EMAIL=support@casprivatecare.com

# ===============================================
# STRIPE PAYMENT CONFIGURATION
# ===============================================
# Use test keys for development
# Switch to live keys for production
STRIPE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET=sk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Connect for Payouts
STRIPE_CONNECT_CLIENT_ID=ca_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Auto-approve bookings (true/false)
BOOKING_AUTO_APPROVE=false

# Maximum active bookings per client
MAX_ACTIVE_BOOKINGS_PER_CLIENT=1

# Commission Rates
MARKETING_COMMISSION_RATE=1.00
TRAINING_COMMISSION_RATE=0.50
ADMIN_COMMISSION_RATE=0.00

# ===============================================
# EXTERNAL SERVICES (Optional)
# ===============================================
# Sentry Error Monitoring
SENTRY_LARAVEL_DSN=

# UptimeRobot Monitoring
UPTIMEROBOT_API_KEY=

# Google Analytics
GOOGLE_ANALYTICS_ID=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Stripe Payment Integration
STRIPE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
STRIPE_CLIENT_ID=ca_YOUR_CLIENT_ID_HERE
