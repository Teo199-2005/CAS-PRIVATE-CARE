# ========================================
# CAS PRIVATE CARE - PRODUCTION ENVIRONMENT
# ========================================
# IMPORTANT: Copy this to .env and configure for production
# Never commit .env to version control!

# Application Configuration
APP_NAME="CAS Private Care"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://casprivatecare.online
ASSET_URL=https://casprivatecare.online

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (USE STRONG PASSWORD!)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cas_db_production
DB_USERNAME=cas_user
DB_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD_HERE

# Session Configuration (Use Redis in production)
SESSION_DRIVER=redis
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.casprivatecare.online
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Broadcasting & Queue (Use Redis)
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache Configuration (Use Redis)
CACHE_STORE=redis
CACHE_PREFIX=cas_cache

# Redis Configuration (Set Password!)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Email Configuration (Brevo/Sendinblue)
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=YOUR_BREVO_USERNAME
MAIL_PASSWORD=YOUR_BREVO_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@casprivatecare.online
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (For File Storage)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=cas-private-care-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# OAuth Configuration (ROTATE THESE KEYS!)
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_PRODUCTION_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://casprivatecare.online/auth/google/callback

FACEBOOK_CLIENT_ID=YOUR_PRODUCTION_FACEBOOK_APP_ID
FACEBOOK_CLIENT_SECRET=YOUR_PRODUCTION_FACEBOOK_APP_SECRET
FACEBOOK_REDIRECT_URI=https://casprivatecare.online/auth/facebook/callback

# Stripe Payment Integration (LIVE KEYS!)
STRIPE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_SECRET=sk_live_YOUR_LIVE_SECRET_KEY
VITE_STRIPE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_CLIENT_ID=ca_YOUR_CONNECT_CLIENT_ID

# Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_GLOBAL=1000

# Monitoring & Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY
NEW_RELIC_APP_NAME="CAS Private Care"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cas-backups-production

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ========================================
# SECURITY CHECKLIST BEFORE GOING LIVE:
# ========================================
# □ APP_ENV=production
# □ APP_DEBUG=false
# □ APP_KEY generated and unique
# □ DB_PASSWORD is strong (20+ characters)
# □ REDIS_PASSWORD set
# □ All OAuth keys rotated (production values)
# □ Stripe LIVE keys configured
# □ Webhook secret configured
# □ SESSION_ENCRYPT=true
# □ SESSION_SECURE_COOKIE=true
# □ HTTPS enabled (SSL certificate)
# □ Firewall configured
# □ Backups automated
# □ Monitoring enabled (Sentry)
# ========================================
