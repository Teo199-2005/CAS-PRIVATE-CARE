{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "./resources/js/types/generated",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@components/*": ["./resources/js/components/*"],
      "@composables/*": ["./resources/js/composables/*"],
      "@types/*": ["./resources/js/types/*"]
    },
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "public",
    "vendor",
    "storage",
    "bootstrap/cache"
  ],
  "vueCompilerOptions": {
    "target": 3.3
  }
}
